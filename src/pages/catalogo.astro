            .filter((html) => html !== '')
            .join('');
        } else {
          elementos.produtosContainer.innerHTML = produtosFiltrados
            .map((p) => templates.produtoCard(p))
            .join('');
        }

        // DEBUG: Verificar se os links foram criados
        const productLinks = elementos.produtosContainer?.querySelectorAll('.produto-card');
        productLinks?.forEach((link, index) => {
          const href = (link as HTMLAnchorElement).href;
          const id = (link as HTMLElement).dataset.produtoId;
          
          // Adicionar listener de debug
          link.addEventListener('click', (e) => {
            
            // Verificar se vai navegar
            setTimeout(() => {
            }, 100);
          });
