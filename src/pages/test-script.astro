<!-- TESTE 2: Script processado pelo Astro -->
<script>
  console.log('‚úÖ TESTE 2: Script Astro funcionou!');
  console.log('Mode:', import.meta.env.MODE);
  console.log('DEV:', import.meta.env.DEV);

