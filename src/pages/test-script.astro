      const output = document.getElementById('output');
      if (output) {
        output.innerHTML += '<br>‚úÖ TESTE 3: Supabase importado!';
        output.innerHTML += '<br>Exports: ' + Object.keys(module).join(', ');
      }
    }).catch((error) => {
      console.error('‚ùå TESTE 3: Erro ao importar supabase:', error);

      const output = document.getElementById('output');
      if (output) {
