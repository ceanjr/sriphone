      const file = files[i];
      const fileName = `${batchId}_${i}_${file.name.replace(/[^a-zA-Z0-9._-]/g, '_').replace(/\.[^.]+$/, '')}.jpg`;

      console.log(`   ğŸ“ Processando ${i + 1}/${files.length}: ${file.name} (${file.size} bytes)`);

      try {
        // Comprimir imagem no cliente para evitar erro 413 da Vercel
        const compressedBlob = await compressImage(file, 1200, 0.85);

        // Criar File a partir do Blob comprimido
        try {
          const compressedFile = new File([compressedBlob], fileName, { type: 'image/jpeg' });
          formData.append(`file${i}`, compressedFile);
        } catch {
          // Fallback para Safari iOS antigo
          formData.append(`file${i}`, compressedBlob, fileName);
        }
      } catch (compressError) {
        console.warn(`   âš ï¸ Falha ao comprimir, usando original:`, compressError);
        // Fallback: usar arquivo original se compressÃ£o falhar
        formData.append(`file${i}`, file, fileName);
      }
    }

    // UMA ÃšNICA requisiÃ§Ã£o para todas as imagens
    const url = `/api/admin/upload?batch=${batchId}`;
    console.log(`ğŸ“¤ [BATCH UPLOAD] Enviando para: ${url}`);

    let response: Response;
    try {
      response = await fetch(url, {
        method: 'POST',
        body: formData,
        credentials: 'include', // Importante para Safari iOS enviar cookies
      });
      console.log(`ğŸ“¥ [BATCH UPLOAD] Resposta recebida: ${response.status} ${response.statusText}`);
    } catch (fetchError: any) {
      console.error('âŒ [BATCH UPLOAD] Erro de rede:', fetchError.message);
      throw new Error(`Erro de conexÃ£o: ${fetchError.message}`);
    }

    if (!response.ok) {
      console.error(`âŒ [BATCH UPLOAD] Resposta nÃ£o OK: ${response.status}`);
      const error = await safeJsonParse(response);
      throw new Error(error.error || `Erro no upload (${response.status})`);
    }

    const result = await safeJsonParse(response);

    console.log(`âœ… [BATCH UPLOAD] Sucesso!`);
    console.log(`   ${result.count} imagens processadas`);
    result.urls.forEach((url: string, i: number) => {
      console.log(`   URL ${i + 1}: ${url}`);
    });
    console.log('â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”');

    if (result.errors && result.errors.length > 0) {
      console.warn('âš ï¸ Alguns erros:', result.errors);
    }

    return result.urls;
  }

  // ============================================================================
  // SUBMIT DO FORMULÃRIO
  // ============================================================================

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    if (selectedFiles.length === 0) {
