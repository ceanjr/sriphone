</AdminLayout>

<script>
  // ============================================================================
  // GERENCIADOR DE EDI√á√ÉO (FIX GHOSTING & RELIABILITY)
  // ============================================================================

  class ProductEditManager {
    private form: HTMLFormElement;
    private submitBtn: HTMLButtonElement;
    private submitText: HTMLSpanElement;
    private fileInput: HTMLInputElement;
    private uploadArea: HTMLElement;
    private existingImagesInput: HTMLInputElement;
    private productIdInput: HTMLInputElement;
    
    // State
    private existingImageUrls: string[] = [];
    private newImageFiles: File[] = []; // Files to be uploaded
    private blobUrls: string[] = [];
    private isSubmitting = false;
    private formDirty = false;

    private readonly MAX_IMAGES = 5;
    private readonly MAX_FILE_SIZE = 10 * 1024 * 1024; // 10MB
    private readonly UPLOAD_CONCURRENCY = 3;

    constructor() {
      this.form = document.getElementById('product-form') as HTMLFormElement;
      this.submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
      this.submitText = document.getElementById('submit-text') as HTMLSpanElement;
      this.fileInput = document.getElementById('foto-upload') as HTMLInputElement;
      this.uploadArea = document.getElementById('upload-area') as HTMLElement;
      this.existingImagesInput = document.getElementById('existing-images-json') as HTMLInputElement;
      this.productIdInput = document.getElementById('produto_id') as HTMLInputElement;

      this.init();
    }

    private init() {
      if (!this.form) return;

      // Event Listeners
      this.fileInput?.addEventListener('change', (e) => this.handleFileSelect(e));
      this.uploadArea?.addEventListener('click', (e) => this.handleAreaClick(e));
      this.form.addEventListener('submit', (e) => this.handleSubmit(e));
      this.form.addEventListener('input', () => { this.formDirty = true; });

      // Global Handlers
      (window as any).removeExistingImage = (index: number) => this.removeExistingImage(index);
      (window as any).removeNewImage = (index: number) => this.removeNewImage(index);
      (window as any).setMainExistingImage = (index: number) => this.setMainExistingImage(index);
      (window as any).setMainNewImage = (index: number) => this.setMainNewImage(index);

      // Lifecycle
      window.addEventListener('beforeunload', (e) => this.handleBeforeUnload(e));
      window.addEventListener('pagehide', () => this.cleanup());
      
      // CRITICAL: Force reset/reload of state on pageshow
      window.addEventListener('pageshow', () => {
        console.log('üîÑ [PAGESHOW] Refreshing state');
        this.resetFromDOM(); // In edit mode, we want to reset to what's in the DOM/Server state, not clear everything
      });

      // Initial Load
      this.resetFromDOM();
    }

    // ========================================================================
    // STATE MANAGEMENT
    // ========================================================================

    private resetFromDOM() {
      this.cleanupBlobUrls();
      this.newImageFiles = [];
      this.blobUrls = [];
      this.isSubmitting = false;
      this.formDirty = false;
      
      try {
        const json = this.existingImagesInput?.value;
        this.existingImageUrls = json ? JSON.parse(json) : [];
      } catch (e) {
        console.error('Error parsing existing images', e);
        this.existingImageUrls = [];
      }

      if (this.fileInput) this.fileInput.value = '';
      this.enableSubmit();
      this.renderPreviews();
    }

    private cleanup() {
      this.cleanupBlobUrls();
    }

    private cleanupBlobUrls() {
      this.blobUrls.forEach(url => URL.revokeObjectURL(url));
      this.blobUrls = [];
    }

    private enableSubmit() {
      if (this.submitBtn) {
        this.submitBtn.disabled = false;
        if (this.submitText) this.submitText.innerHTML = 'Salvar Altera√ß√µes';
      }
    }

    private disableSubmit(message: string) {
      if (this.submitBtn) {
        this.submitBtn.disabled = true;
        if (this.submitText) this.submitText.innerHTML = `<div class="form-spinner"></div> ${message}`;
      }
    }

    // ========================================================================
    // LOGIC
    // ========================================================================

    private handleAreaClick(e: MouseEvent) {
      const target = e.target as HTMLElement;
      if (target.closest('button')) return;

      const total = this.existingImageUrls.length + this.newImageFiles.length;
      if (total < this.MAX_IMAGES) {
        this.fileInput?.click();
      } else {
        window.showToast(`M√°ximo de ${this.MAX_IMAGES} imagens`, 'warning');
      }
    }

    private handleFileSelect(e: Event) {
      const input = e.target as HTMLInputElement;
      const files = input.files;
      if (!files || files.length === 0) return;

      const currentTotal = this.existingImageUrls.length + this.newImageFiles.length;
      const remainingSlots = this.MAX_IMAGES - currentTotal;
      const filesToAdd = Array.from(files).slice(0, remainingSlots);

      let added = 0;
      for (const file of filesToAdd) {
        if (file.size > this.MAX_FILE_SIZE) {
          window.showToast(`${file.name} muito grande (m√°x 10MB)`, 'error');
          continue;
        }
        if (!file.type.startsWith('image/')) {
          window.showToast(`${file.name} n√£o √© uma imagem`, 'error');
          continue;
        }
        this.newImageFiles.push(file);
        added++;
      }

      input.value = '';
      this.renderPreviews();
      if (added > 0) window.showToast(`${added} imagem(ns) selecionada(s)`, 'success');
    }

    // Removing Images
    private removeExistingImage(index: number) {
      this.existingImageUrls.splice(index, 1);
      this.renderPreviews();
      this.formDirty = true;
    }

    private removeNewImage(index: number) {
      this.newImageFiles.splice(index, 1);
      this.renderPreviews();
    }

    // Setting Main Image (Reordering)
    private setMainExistingImage(index: number) {
      if (index === 0 && this.newImageFiles.length === 0) return; // Already main (if no new files before it, but logic here is simple array manip)
      
      const [img] = this.existingImageUrls.splice(index, 1);
      this.existingImageUrls.unshift(img);
      this.renderPreviews();
      this.formDirty = true;
      window.showToast('Imagem principal definida', 'success');
    }

    private setMainNewImage(index: number) {
      const [file] = this.newImageFiles.splice(index, 1);
      this.newImageFiles.unshift(file);
      this.renderPreviews();
      window.showToast('Imagem principal definida (entre as novas)', 'success');
    }

    // ========================================================================
    // RENDER
    // ========================================================================

    private renderPreviews() {
      if (!this.uploadArea) return;
      this.cleanupBlobUrls();

      const total = this.existingImageUrls.length + this.newImageFiles.length;

      if (total === 0) {
        this.uploadArea.innerHTML = `
          <div class="upload-placeholder">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <p>Clique para adicionar imagens</p>
            <small>JPG, PNG at√© 10MB cada (m√°ximo 5 imagens)</small>
          </div>
        `;
        return;
      }

      // Existing Images
      const existingHtml = this.existingImageUrls.map((url, index) => {
        const isMain = index === 0; // Relative to existing group.
        return `
          <div class="preview-card ${isMain ? 'is-main' : ''}"
               onclick="window.setMainExistingImage(${index})"
               title="Clique para tornar principal">
            <img src="${url}" alt="Imagem ${index+1}" />
            <button type="button" class="remove-btn" onclick="event.stopPropagation(); window.removeExistingImage(${index})">√ó</button>
            ${isMain ? '<span class="main-badge">Principal</span>' : ''}
          </div>
        `;
      }).join('');

      // New Images
      const newHtml = this.newImageFiles.map((file, index) => {
        const url = URL.createObjectURL(file);
        this.blobUrls.push(url);
        // It is "Main" only if there are no existing images and it's the first new one
        const isMain = this.existingImageUrls.length === 0 && index === 0;
        
        return `
          <div class="preview-card ${isMain ? 'is-main' : ''} is-new"
               onclick="window.setMainNewImage(${index})"
               title="Clique para tornar principal">
            <img src="${url}" alt="${file.name}" />
            <button type="button" class="remove-btn" onclick="event.stopPropagation(); window.removeNewImage(${index})">√ó</button>
            <span class="new-badge">Nova</span>
            ${isMain ? '<span class="main-badge">Principal</span>' : ''}
          </div>
        `;
      }).join('');

      const addButtonHtml = total < this.MAX_IMAGES ? `
        <div class="add-more-btn" onclick="document.getElementById('foto-upload').click()">
          <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          <span>Adicionar</span>
        </div>
      ` : '';

      this.uploadArea.innerHTML = `
        <div class="images-preview-grid">
          ${existingHtml}
          ${newHtml}
          ${addButtonHtml}
        </div>
      `;
    }

    // ========================================================================
    // UPLOAD
    // ========================================================================

    private async compressImage(file: File): Promise<File> {
      const imageCompression = (await import('browser-image-compression')).default;
      const options = {
        maxSizeMB: 2,
        maxWidthOrHeight: 1920,
        useWebWorker: true,
        fileType: 'image/jpeg',
        initialQuality: 0.85,
        exifOrientation: undefined,
      };

      try {
        const compressed = await imageCompression(file, options);
        if (compressed.size > 3.5 * 1024 * 1024) {
             return await imageCompression(compressed, { ...options, maxSizeMB: 1, initialQuality: 0.7 });
        }
        return compressed;
      } catch (err) {
        console.warn('Compression failed', err);
        return file;
      }
    }

    private async uploadSingleImage(file: File): Promise<string> {
      const formData = new FormData();
      const compressed = await this.compressImage(file);
      const safeName = file.name.replace(/[^a-zA-Z0-9._-]/g, '_');
      formData.append('file0', compressed, safeName);

      // FIX: Add timestamp to prevent caching of POST requests (Ghosting issue)
      const response = await fetch(`/api/admin/upload?t=${Date.now()}`, {
        method: 'POST',
        headers: {
          'Cache-Control': 'no-cache, no-store'
        },
        body: formData,
        credentials: 'include'
      });

      if (!response.ok) {
        const text = await response.text();
        throw new Error(`Erro upload (${response.status}): ${text.substring(0, 50)}`);
      }

      const result = await response.json();
      if (result.urls && result.urls.length > 0) {
        console.log(`‚úÖ Upload success for ${safeName}:`, result.urls[0]);
        return result.urls[0];
      }
      throw new Error('Nenhuma URL retornada');
    }

    private async uploadNewImages(): Promise<string[]> {
      if (this.newImageFiles.length === 0) return [];

      const urls: string[] = new Array(this.newImageFiles.length);
      const errors: string[] = [];
      let currentIndex = 0;

      const processNext = async () => {
        while (currentIndex < this.newImageFiles.length) {
          const i = currentIndex++;
          try {
            console.log(`üì§ Uploading new image ${i+1}/${this.newImageFiles.length}...`);
            urls[i] = await this.uploadSingleImage(this.newImageFiles[i]);
          } catch (err: any) {
            console.error(`‚ùå Error uploading image ${i}:`, err);
            errors.push(err.message);
          }
        }
      };

      const workers = Array(Math.min(this.newImageFiles.length, this.UPLOAD_CONCURRENCY))
        .fill(null)
        .map(() => processNext());

      await Promise.all(workers);

      if (errors.length > 0) throw new Error(errors.join('\n'));
      return urls;
    }

    // ========================================================================
    // SUBMIT
    // ========================================================================

    private async handleSubmit(e: Event) {
      e.preventDefault();
      
      this.isSubmitting = true;
      this.disableSubmit('Salvando...');

      try {
        // 1. Upload New Images
        let newUrls: string[] = [];
        if (this.newImageFiles.length > 0) {
          this.disableSubmit('Enviando imagens...');
          newUrls = await this.uploadNewImages();
        }

        // 2. Combine URLs (Existing + New)
        // Note: New images are appended to the end.
        const finalImages = [...this.existingImageUrls, ...newUrls];

        // 3. Prepare Payload
        const formData = new FormData(this.form);
        const produto = {
          nome: formData.get('nome'),
          codigo: formData.get('codigo'),
          preco: parseFloat((formData.get('preco') as string).replace(',', '.')) || 0,
          bateria: formData.get('bateria') ? parseInt(formData.get('bateria') as string) : null,
          condicao: formData.get('condicao'),
          categoria_id: formData.get('categoria_id'),
          descricao: formData.get('descricao') || null,
          imagens: finalImages,
        };

        // 4. Send Update
        const response = await fetch(`/api/admin/produtos/${this.productIdInput.value}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(produto),
          credentials: 'include',
        });

        if (!response.ok) {
          const data = await response.json();
          throw new Error(data.error || 'Erro ao atualizar');
        }

        window.showToast('Produto atualizado com sucesso!', 'success');

        // Cache Busting & Redirect
        setTimeout(() => {
          window.location.href = `/admin/produtos?_t=${Date.now()}`;
        }, 500);

      } catch (error: any) {
        console.error('‚ùå Submit Error:', error);
        window.showToast(error.message || 'Erro ao salvar', 'error');
        this.enableSubmit();
        this.isSubmitting = false;
      }
    }

    private handleBeforeUnload(e: BeforeUnloadEvent) {
      if ((this.formDirty || this.newImageFiles.length > 0) && !this.isSubmitting) {
        e.preventDefault();
        e.returnValue = '';
      }
    }
  }

  // Initialize
  new ProductEditManager();
</script>

