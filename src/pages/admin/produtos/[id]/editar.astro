<style is:global>
  .images-preview-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 12px;
    padding: 12px;
    background: #111;
    border-radius: 8px;
    border: 1px solid #333;
  }

  .preview-card {
    position: relative;
    aspect-ratio: 1/1;
    border-radius: 6px;
    overflow: hidden;
    background: #000;
    border: 2px solid #333;
    cursor: pointer;
    transition: all 0.2s;
  }

  .preview-card.is-main {
    border-color: #3b82f6;
  }
  .preview-card.is-new {
    border-color: #22c55e;
  }
  .preview-card:hover {
    border-color: #555;
    transform: translateY(-2px);
