---
// src/components/ProductCard.astro
interface Props {
  id: string;
  codigo: string;
  nome: string;
  descricao: string;
  preco: number;
  condicao: string;
  bateria: number;
  categoria: string;
  imagemPrincipal: string;
  imagens: string[];
}

const {
  id,
  codigo,
  nome,
  descricao,
  preco,
  condicao,
  bateria,
  categoria,
  imagemPrincipal,
  imagens,
} = Astro.props;

const precoFormatado = new Intl.NumberFormat('pt-BR', {
  style: 'currency',
  currency: 'BRL',
}).format(preco);
const temBateria = bateria && bateria > 0;
const temDescricao = descricao && descricao.trim().length > 0;
---

<article
  class="produto-card"
  data-produto-id={id}
  data-produto-codigo={codigo}
  data-produto-nome={nome}
  data-produto-descricao={descricao}
  data-produto-preco={precoFormatado}
  data-produto-condicao={condicao}
  data-produto-bateria={bateria}
  data-produto-categoria={categoria}
  data-produto-imagens={JSON.stringify(imagens)}
>
  <button
    class="btn-editar-produto"
    data-produto-data={JSON.stringify({
      id,
      codigo,
      nome,
      descricao,
      preco,
      condicao,
      bateria,
      categoria_id: categoria,
      imagens: imagens || [],
    })}
    aria-label="Editar produto"
  >
    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path
        d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
      <path
        d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </button>
  <div class="produto-image">
    <div class="image-placeholder">
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path
          d="M21 16V8C21 6.89543 20.1046 6 19 6H5C3.89543 6 3 6.89543 3 8V16C3 17.1046 3.89543 18 5 18H19C20.1046 18 21 17.1046 21 16Z"
          stroke="currentColor"
          stroke-width="2"></path>
        <path
          d="M9 12L12 9L15 12"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"></path>
      </svg>
    </div>
    {
      !temBateria && (
        <span class={`condicao-badge ${condicao.toLowerCase()}`}>
          {condicao}
        </span>
      )
    }
    {
      temBateria && (
        <div class="bateria-indicator">
          <svg
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <rect
              x="2"
              y="7"
              width="18"
              height="10"
              rx="2"
              stroke="currentColor"
              stroke-width="2"
            />
            <path d="M20 10H22V14H20" stroke="currentColor" stroke-width="2" />
            <rect
              x="4"
              y="9"
              width={`${(bateria / 100) * 14}`}
              height="6"
              rx="1"
              fill="currentColor"
            />
          </svg>
          <span>{bateria}%</span>
        </div>
      )
    }
  </div>
  <div class={`produto-info ${!temDescricao ? 'sem-descricao' : ''}`}>
    <span class="categoria-tag">{categoria}</span>
    <h3>{nome}</h3>
    {temDescricao && <p class="descricao">{descricao}</p>}
    <div class="produto-footer">
      <span class="preco">{precoFormatado}</span>
      <button class="btn-detalhes">Ver detalhes</button>
    </div>
  </div>
</article>

<style>
  .produto-card {
    background: #0a0a0a;
    border: 1px solid #1a1a1a;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .produto-card:hover {
    transform: translateY(-4px);
    border-color: #2a2a2a;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }

  .produto-image {
    position: relative;
    aspect-ratio: 1;
    background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid #1a1a1a;
  }

  .image-placeholder {
    width: 80px;
    height: 80px;
    color: #333;
  }

  .condicao-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(255, 255, 255, 0.95);
    color: #000;
    padding: 0.35rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .condicao-badge.novo {
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: #fff;
  }

  .condicao-badge.seminovo {
    background: linear-gradient(135deg, #ffffff, #f0f0f0);
    color: #fff;
  }

  .bateria-indicator {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    display: flex;
    align-items: center;
    gap: 0.35rem;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(10px);
    padding: 0.4rem 0.7rem;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .bateria-indicator svg {
    width: 20px;
    height: 20px;
    color: #22c55e;
  }

  .bateria-indicator span {
    font-size: 0.75rem;
    font-weight: 600;
    color: #fff;
  }

  .produto-info {
    padding: 1.5rem;
  }

  .produto-info.sem-descricao {
    padding-bottom: 2.9rem; /* Adiciona espaço extra equivalente à descrição */
  }

  .categoria-tag {
    display: inline-block;
    font-size: 0.7rem;
    color: #888;
    background: #1a1a1a;
    padding: 0.25rem 0.6rem;
    border-radius: 12px;
    margin-bottom: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.05em;
  }

  .produto-info h3 {
    font-size: 1.1rem;
    color: var(--cor-primaria);
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .descricao {
    font-size: 0.9rem;
    color: #777;
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  .produto-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .preco {
    font-family: 'Halenoir', sans-serif;
    font-size: 1.3rem;
    color: var(--cor-primaria);
    font-weight: 700;
  }

  .btn-detalhes {
    background: transparent;
    border: 1px solid #2a2a2a;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-size: 0.85rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-detalhes:hover {
    background: #fff;
    color: #000;
    border-color: #fff;
  }
</style>
