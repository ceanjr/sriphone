<style is:global>
/* ADIÇÃO: garantir box-sizing e evitar overflow horizontal */
.modal, .modal * , .modal *::before, .modal *::after {
    box-sizing: border-box;
}

    .modal {
        position: fixed;
        inset: 0;
        z-index: 1000;
        display: none;
        align-items: center;
        justify-content: center;
        padding: 0;
    }

    .modal.active {
        display: flex;
    }

    .modal-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.98);
        backdrop-filter: blur(20px);
        animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    /* Ajuste o modal principal */
    .modal-content {
        position: relative;
        background: #000;
        width: 95vw !important; /* Força a largura */
        min-width: 534px; /* Remove o limite mínimo fixo */
        max-width: 1400px !important; /* Força a largura máxima */
        height: 85vh !important; /* Reduzido de 90vh para 85vh */
        margin: 1rem auto; /* Reduzido de 2rem para 1rem */
        overflow: hidden;
        animation: slideUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        z-index: 1;
        display: flex;
        flex-direction: column;
        border-radius: 16px;
    }

    /* Ajuste o corpo do modal */
    .modal-body {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100%;
        overflow: hidden;
        height: 100%; /* Garante que ocupe todo o espaço */
        gap: 0; /* Remove espaço entre galeria e info */
    }

    @media (min-width: 1024px) {
        .modal-content {
            width: 90vw !important;
            height: 80vh !important; /* Reduzido de 85vh */
            border-radius: 32px;
        }

        .modal-body {
            flex-direction: row;
        }

        .modal-gallery {
            flex: 0 0 65%;
            min-width: 0; /* Permite que o flex shrink funcione */
        }

        .modal-info {
            flex: 0 0 35%;
            min-width: 0; /* Permite que o flex shrink funcione */
        }
    }

    /* Ajuste para telas muito grandes */
    @media (min-width: 1400px) {
        .modal-content {
            width: 85vw !important;
            max-width: 1800px !important;
        }

        .modal-gallery {
            flex: 0 0 70%;
        }

        .modal-info {
            flex: 0 0 30%;
        }
    }

    .modal-close {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 100;
    }

    .modal-close:hover {
        background: #fff;
        color: #000;
        transform: rotate(90deg) scale(1.05);
        border-color: #fff;
    }

    .modal-close svg {
        width: 20px;
        height: 20px;
    }

    /* GALERIA - AGORA COM DESTAQUE MÁXIMO */
    .modal-gallery {
        position: relative;
        background: #000;
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 60vh;
    }

    @media (min-width: 1024px) {
        .modal-gallery {
            flex: 0 0 65%;
            min-height: 600px;
            border-radius: 32px 0 0 32px;
        }
    }

    @media (min-width: 1400px) {
        .modal-gallery {
            flex: 0 0 70%;
            min-height: 700px;
        }
    }

    .carousel {
        position: relative;
        flex: 1;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(circle at center, #0a0a0a 0%, #000 100%);
    }

    .carousel-track {
        display: flex;
        width: 100%;
        height: 100%;
        transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        touch-action: pan-y pinch-zoom;
    }

    .carousel-slide {
        min-width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        /* incluir padding na largura (evita overflow horizontal causado por padding) */
        box-sizing: border-box;
        padding: 2rem 1.5rem; /* Reduzido de 3rem 2rem */
    }

    @media (min-width: 1024px) {
        .carousel-slide {
            padding: 3rem 2rem; /* Reduzido de 4rem 3rem */
        }
    }

    .carousel-slide img {
        max-width: 100%;
        max-height: 100%;
        width: auto;
        height: auto;
        object-fit: contain;
        user-select: none;
        display: block;
        filter: drop-shadow(0 20px 60px rgba(0, 0, 0, 0.5));
        transition: transform 0.3s ease;
    }

    .carousel-slide:hover img {
        transform: scale(1.02);
    }

    .carousel-placeholder {
        width: 120px;
        height: 120px;
        color: #222;
        opacity: 0.3;
    }

    .carousel-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.12);
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 5;
        color: #fff;
    }

    @media (max-width: 1023px) {
        .carousel-btn {
            display: none;
        }
    }

    .carousel-btn:hover {
        background: rgba(255, 255, 255, 0.95);
        color: #000;
        transform: translateY(-50%) scale(1.1);
        border-color: #fff;
    }

    .carousel-btn.prev {
        left: 2rem;
    }

    .carousel-btn.next {
        right: 2rem;
    }

    .carousel-btn svg {
        width: 24px;
        height: 24px;
    }

    .carousel-dots {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.75rem;
        padding: 1.5rem;
        background: linear-gradient(to top, #000 0%, transparent 100%);
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
    }

    .dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.25);
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .dot:hover {
        background: rgba(255, 255, 255, 0.5);
        transform: scale(1.2);
    }

    .dot.active {
        background: #fff;
        width: 32px;
        border-radius: 5px;
        border-color: #fff;
    }

    /* INFORMAÇÕES - COMPACTAS E ELEGANTES */
    .modal-info {
        display: flex;
        flex-direction: column;
        background: #0a0a0a;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        overflow-y: hidden; /* Remove scroll */
    }

    @media (min-width: 1024px) {
        .modal-info {
            flex: 0 0 35%;
            max-width: 480px;
            overflow-y: hidden; /* Remove scroll */
            border-top: none;
            border-left: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 0 32px 32px 0;
        }
    }

    @media (min-width: 1400px) {
        .modal-info {
            flex: 0 0 30%;
        }
    }

    .info-header {
        padding: 1.25rem 1.5rem 0.75rem; /* Reduzido de 2rem 2rem 1rem */
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .modal-badges {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 0.75rem; /* Reduzido de 1.25rem */
        flex-wrap: wrap;
    }

    .modal-condicao,
    .modal-categoria {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem;
        border-radius: 24px;
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 0.02em;
    }

    .modal-condicao {
        background: linear-gradient(135deg, #fff 0%, #f0f0f0 100%);
        color: #000;
        box-shadow: 0 2px 8px rgba(255, 255, 255, 0.1);
    }

    .modal-categoria {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #999;
    }

    .modal-nome {
        font-family: "Halenoir", sans-serif;
        font-size: 1.5rem; /* Reduzido de 1.75rem */
        color: var(--cor-primaria);
        margin: 0;
        line-height: 1.2;
        letter-spacing: -0.02em;
    }

    @media (min-width: 1024px) {
        .modal-nome {
            font-size: 1.75rem; /* Reduzido de 2rem */
        }
    }

    .info-body {
        padding: 1rem 1.5rem; /* Reduzido de 1.5rem 2rem */
        flex: 1;
    }

    .modal-descricao {
        color: #999;
        font-size: 0.9rem; /* Reduzido de 1rem */
        line-height: 1.5; /* Reduzido de 1.7 */
        margin-bottom: 1rem; /* Reduzido de 2rem */
    }

    .modal-specs {
        display: grid;
        gap: 0.75rem; /* Reduzido de 1.25rem */
        padding: 1rem; /* Reduzido de 1.5rem */
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 16px;
    }

    .spec-item {
        display: flex;
        align-items: center;
        gap: 0.75rem; /* Reduzido de 1rem */
    }

    .spec-item svg {
        width: 24px; /* Reduzido de 28px */
        height: 24px;
        color: rgba(255, 255, 255, 0.4);
        flex-shrink: 0;
    }

    .spec-item > div {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .spec-label {
        font-size: 0.75rem;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        font-weight: 600;
    }

    .spec-value {
        font-size: 1rem;
        color: #fff;
        font-weight: 600;
    }

    .modal-bateria {
        color: #22c55e;
    }

    .modal-codigo {
        font-family: 'Courier New', monospace;
        font-size: 0.95rem;
    }

    .info-footer {
        padding: 1rem 1.5rem; /* Reduzido de 1.5rem 2rem 2rem */
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        background: rgba(0, 0, 0, 0.3);
    }

    @media (min-width: 1024px) {
        .info-footer {
            border-radius: 0 0 32px 0;
        }
    }

    .modal-preco {
        font-family: "Halenoir", sans-serif;
        font-size: 2rem; /* Reduzido de 2.5rem */
        color: var(--cor-primaria);
        font-weight: 900;
        margin-bottom: 1rem; /* Reduzido de 1.25rem */
        letter-spacing: -0.03em;
        line-height: 1;
    }

    @media (min-width: 1024px) {
        .modal-preco {
            font-size: 2.25rem; /* Reduzido de 2.75rem */
        }
    }

    .btn-whatsapp {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.875rem;
        background: transparent;
        border: 2px solid rgba(255, 255, 255, 0.15);
        color: #fff;
        padding: 0.875rem 1.5rem; /* Reduzido de 1.125rem 1.75rem */
        border-radius: 16px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        width: 100%;
        position: relative;
        overflow: hidden;
    }

    .btn-whatsapp::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .btn-whatsapp:hover {
        border-color: #25D366;
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(37, 211, 102, 0.3);
    }

    .btn-whatsapp:hover::before {
        opacity: 1;
    }

    .btn-whatsapp svg {
        width: 24px;
        height: 24px;
        fill: #25D366;
        position: relative;
        z-index: 1;
        transition: fill 0.3s ease;
    }

    .btn-whatsapp:hover svg {
        fill: #fff;
    }

    .btn-whatsapp > *:not(svg) {
        position: relative;
        z-index: 1;
    }

    /* Modal de Imagem Expandida */
    .modal-imagem-expandida {
        position: fixed;
        inset: 0;
        z-index: 2000;
        background: rgba(0, 0, 0, 0.98);
        display: none;
        align-items: center;
        justify-content: center;
    }

    .modal-imagem-expandida.active {
        display: flex;
    }

    .modal-close-expandido {
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        width: 56px;
        height: 56px;
        border-radius: 50%;
        font-size: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
