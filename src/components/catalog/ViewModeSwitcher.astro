---
// src/components/catalog/ViewModeSwitcher.astro
// Switcher para modo de visualização
---

<div class="view-mode-switcher" role="group" aria-label="Modo de visualização">
  <button
    class="view-btn"
    data-view="grade"
    aria-label="Visualização em grade"
    title="Grade"
  >
    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <rect x="3" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2"/>
      <rect x="14" y="3" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2"/>
      <rect x="3" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2"/>
      <rect x="14" y="14" width="7" height="7" rx="1" stroke="currentColor" stroke-width="2"/>
    </svg>
  </button>
  <button
    class="view-btn"
    data-view="lista"
    aria-label="Visualização em lista"
    title="Lista"
  >
    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <line x1="8" y1="6" x2="21" y2="6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      <line x1="8" y1="12" x2="21" y2="12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      <line x1="8" y1="18" x2="21" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
      <circle cx="3" cy="6" r="1" fill="currentColor"/>
      <circle cx="3" cy="12" r="1" fill="currentColor"/>
      <circle cx="3" cy="18" r="1" fill="currentColor"/>
    </svg>
  </button>
  <button
    class="view-btn active"
    data-view="coluna"
    aria-label="Visualização em coluna"
    title="Coluna"
  >
    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <rect x="3" y="3" width="18" height="7" rx="1" stroke="currentColor" stroke-width="2"/>
      <rect x="3" y="14" width="18" height="7" rx="1" stroke="currentColor" stroke-width="2"/>
    </svg>
  </button>
</div>

<style>
  .view-mode-switcher {
    display: flex;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.05);
    padding: 0.25rem;
    border-radius: 0.5rem;
  }

  .view-btn {
    padding: 0.5rem;
    background: transparent;
    border: none;
    border-radius: 0.375rem;
    color: #9ca3af;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .view-btn svg {
    width: 1.25rem;
    height: 1.25rem;
  }

  .view-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .view-btn.active {
    background: #3b82f6;
    color: white;
  }

  .view-btn:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
</style>
