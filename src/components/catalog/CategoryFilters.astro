---
// src/components/catalog/CategoryFilters.astro
// Filtros de categoria
interface Props {
  categorias?: any[];
  categoriaAtiva?: string;
}

const { categorias = [], categoriaAtiva = 'todos' } = Astro.props;
---

<div class="category-filters">
  <button
    class={`categoria-btn ${categoriaAtiva === 'todos' ? 'active' : ''}`}
    data-categoria="todos"
  >
    Todos
  </button>
  {categorias.map((cat) => (
    <button
      class={`categoria-btn ${cat.id === categoriaAtiva ? 'active' : ''}`}
      data-categoria={cat.id}
    >
      {cat.nome}
    </button>
  ))}
</div>

<style>
  .category-filters {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    padding: 1rem 0;
  }

  .categoria-btn {
    padding: 0.625rem 1.25rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    color: white;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  .categoria-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .categoria-btn.active {
    background: #3b82f6;
    border-color: #3b82f6;
  }

  .categoria-btn:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }

  @media (max-width: 768px) {
    .category-filters {
      gap: 0.5rem;
    }

    .categoria-btn {
      padding: 0.5rem 1rem;
      font-size: 0.8125rem;
    }
  }
</style>
