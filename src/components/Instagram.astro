<style>
  .instagram {
    position: relative;
    padding: 6rem 1rem;
    background-color: var(--cor-fundo-escuro);
    overflow: hidden;
  }

  .container {
    position: relative;
    z-index: 2;
  }

  .content-wrapper {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    align-items: center;
  }

  .text-content {
    text-align: center;
    max-width: 600px;
  }

  .eyebrow {
    display: inline-block;
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    font-weight: 600;
    color: #666;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  .text-content h2 {
    font-family: 'Halenoir', sans-serif;
    font-size: 2rem;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--cor-primaria);
  }

  .highlight-wrapper {
    position: relative;
    display: inline-block;
    /* padding: 0 0.2em; */
  }

  .palavra-dinamica {
    display: inline-block;
    min-width: 200px;
    text-align: center;
    font-weight: 700;
    background: linear-gradient(135deg, #ffffff 0%, #a0a0a0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
  }

  .linha-animada {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, transparent, #ffffff, transparent);
    animation: linhaSlide 2s ease-in-out infinite;
  }

  @keyframes linhaSlide {
    0%,
    100% {
      transform: translateX(-100%);
      opacity: 0;
    }
    50% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .palavra-animada {
    animation: slideUp 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  @keyframes slideUp {
    0% {
      transform: translateY(30px) scale(0.95);
      opacity: 0;
    }
    60% {
      transform: translateY(-3px) scale(1.02);
    }
    100% {
      transform: translateY(0) scale(1);
      opacity: 1;
    }
  }

  .subtitle {
    font-size: 1.1rem;
    color: #999;
    line-height: 1.6;
    max-width: 500px;
    margin: 0 auto;
  }

  .instagram-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 3rem 4rem;
    background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
    border: 1px solid #2a2a2a;
    border-radius: 24px;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    cursor: pointer;
    min-width: 280px;
  }

  .card-shine {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(255, 255, 255, 0.03) 50%,
      transparent 70%
    );
    transform: rotate(45deg);
    transition: all 0.6s ease;
  }

  .instagram-card:hover .card-shine {
    left: 100%;
  }

  .instagram-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: #404040;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }

  .instagram-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #ffffff 0%, #e0e0e0 100%);
    border-radius: 50%;
    transition: all 0.4s ease;
  }

  .instagram-icon img {
    width: 74px;
    height: 74px;
    color: #000;
    transition: transform 0.4s ease;
    border-radius: 50%;
  }

  .instagram-card:hover .instagram-icon {
    transform: scale(1.1);
    background: linear-gradient(135deg, #e0e0e0 0%, #ffffff 100%);
  }

  .instagram-card:hover .instagram-icon svg {
    transform: rotate(15deg);
  }

  .username {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--cor-primaria);
    letter-spacing: -0.02em;
  }

  .cta-text {
    font-size: 0.9rem;
    color: #888;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .instagram-card:hover .cta-text {
    color: #fff;
  }

  .arrow {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    width: 32px;
    height: 32px;
    color: #444;
    transition: all 0.3s ease;
  }

  .arrow svg {
    width: 100%;
    height: 100%;
  }

  .instagram-card:hover .arrow {
    color: #fff;
    transform: translate(4px, -4px);
  }

  .decorative-grid {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 120%;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 4rem;
    opacity: 0.03;
    pointer-events: none;
    z-index: 1;
  }

  .grid-item {
    border: 1px solid #fff;
    border-radius: 20px;
    animation: floatGrid 20s ease-in-out infinite;
  }

  .grid-item:nth-child(1) {
    animation-delay: 0s;
  }

  .grid-item:nth-child(2) {
    animation-delay: 5s;
  }

  .grid-item:nth-child(3) {
    animation-delay: 10s;
  }

  .grid-item:nth-child(4) {
    animation-delay: 15s;
  }

  @keyframes floatGrid {
    0%,
    100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(2deg);
    }
  }

  @media (min-width: 768px) {
    .instagram {
      padding: 8rem 1rem;
    }

    .content-wrapper {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: 4rem;
    }

    .text-content {
      text-align: left;
      flex: 1;
    }

    .text-content h2 {
      font-size: 3.5rem;
    }

    .subtitle {
      margin: 0;
    }

    .instagram-card {
      flex-shrink: 0;
    }

    .decorative-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

<script>
  const palavras = [
    'novidades',
    'ofertas',
    'lançamentos',
    'promoções',
    'tendências',
    'exclusividades',
  ];
  const elemento = document.getElementById('palavra-dinamica');
  let indice = 0;

  function animarPalavra() {
    if (!elemento) return;

    elemento.classList.remove('palavra-animada');

    setTimeout(() => {
      elemento.textContent = palavras[indice];
      elemento.classList.add('palavra-animada');

      indice = (indice + 1) % palavras.length;
    }, 50);
  }

  setTimeout(animarPalavra, 500);
  setInterval(animarPalavra, 3000);
</script>
