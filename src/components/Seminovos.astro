<section id="seminovos" class="seminovos">
    <div class="container">
        <h2>Seminovos revisados por especialistas com garantia de at√©</h2>
        <strong>
            1 ANO<span class="asterisco">*</span>
        </strong>
        <span class="disclaimer">
            *Consulte os termos vigentes e aplicabilidade no ato da compra.
        </span>
    </div>
</section>

<style>
    .seminovos {
        font-family: "Halenoir", sans-serif;
        background: linear-gradient(180deg, var(--cor-fundo-claro) 0%, #f8f8f8 100%);
        color: #000000;
        padding: 6rem 1rem;
        position: relative;
    }

    .seminovos::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, #ddd, transparent);
    }

    .seminovos h2 {
        color: #000000;
        margin-bottom: 1rem;
        line-height: 1.3;
        font-weight: 600;
        font-size: 1.8rem;
    }

    .seminovos strong {
        display: block;
        font-size: 5rem;
        text-align: center;
        font-weight: 900;
        background: linear-gradient(135deg, #000000 0%, #444444 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
        margin: 1.5rem 0;
        position: relative;
    }

    .seminovos strong::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 3px;
        background: #000;
        border-radius: 2px;
    }

    .seminovos strong .asterisco {
        display: inline-block;
        font-size: 1.5rem;
        vertical-align: super;
        margin-left: 0.5rem;
        color: #666;
        background: none;
        -webkit-text-fill-color: #666;
    }

    .disclaimer {
        display: block;
        text-align: center;
        font-size: 0.75rem;
        color: #666;
        margin-top: 2rem;
        font-style: italic;
    }

    @media (min-width: 768px) {
        .seminovos {
            padding: 8rem 1rem;
        }

        .seminovos .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            gap: 3rem;
        }

        .seminovos h2 {
            max-width: 500px;
            font-size: 2.5rem;
            text-align: left;
        }

        .seminovos strong {
            font-size: 7rem;
            flex-shrink: 0;
        }

        .seminovos strong .asterisco {
            font-size: 2rem;
        }

        .disclaimer {
            position: absolute;
            bottom: -40px;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
            font-size: 0.8rem;
            width: 100%;
        }
    }

    @media (min-width: 1024px) {
        .seminovos strong {
            font-size: 9rem;
        }

        .seminovos strong .asterisco {
            font-size: 2.5rem;
        }

        .seminovos h2 {
            font-size: 3rem;
        }
    }
</style>