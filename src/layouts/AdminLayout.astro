---
import Layout from './Layout.astro';
import Sidebar from '../components/admin/Sidebar.astro';
import MobileNav from '../components/admin/MobileNav.astro';
import Toast from '../components/admin/Toast.astro';
import ConfirmModal from '../components/admin/ConfirmModal.astro';
import '../styles/admin.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Painel administrativo Sr. IPHONE VCA' } = Astro.props;
---

<Layout title={title} description={description}>
  <div class="admin-layout">
    <!-- Sidebar Desktop -->
    <aside class="admin-sidebar">
      <Sidebar />
    </aside>

    <!-- Mobile Navigation -->
    <MobileNav />

    <!-- Main Content -->
    <main class="admin-main">
      <slot />
    </main>
  </div>

  <!-- Toast Notifications -->
  <Toast />
  
  <!-- Confirm Modal -->
  <ConfirmModal />
</Layout>
